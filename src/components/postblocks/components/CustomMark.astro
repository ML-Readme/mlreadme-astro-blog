---
import type { Props as $, Mark as MarkType } from "astro-portabletext/types";
import {Mark} from 'astro-portabletext/components'
import Code from "./CodeBlock.astro";

export type Props = $<MarkType>;

const props = Astro.props;

console.log(props.node)

const styleIs = (markType: string) => markType === props.node.markType;

const Cmp = styleIs("code") ? Code : Mark;
---

<Cmp {...props}><slot /></Cmp>